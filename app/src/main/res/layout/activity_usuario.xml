<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tempus.proyectos.tempusx.ActivityUsuario">

    <!-- Fondos -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fondo1alt_height"
        android:layout_marginTop="@dimen/fondo1_marginTop"
        android:background="@color/colorFondoBarra"
        android:id="@+id/txvFondo1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fondo2alt_height"
        android:layout_marginTop="@dimen/fondo2alt_marginTop"
        android:background="@color/colorFondoCuerpo"
        android:id="@+id/txvFondo2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fondo3_height"
        android:layout_marginTop="@dimen/fondo3_marginTop"
        android:background="@color/colorFondoBarra"
        android:id="@+id/txvBarraInf" />

    <!-- Lineas -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea_height"
        android:layout_marginTop="@dimen/linea1_marginTop"
        android:background="@color/colorLinea"
        android:id="@+id/txvLinea1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea_height"
        android:background="@color/colorLinea"
        android:layout_alignBottom="@+id/txvFondo1"
        android:id="@+id/txvLinea2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea_height"
        android:layout_marginTop="@dimen/fondo3_marginTop"
        android:background="@color/colorLinea"
        android:id="@+id/txvLinea3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea_height"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLinea"
        android:id="@+id/txvLinea4" />


    <!-- Titulo -->

    <ImageView
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_marginTop="@dimen/logo_marginTop"
        android:layout_marginLeft="@dimen/logo_marginLeft"
        android:layout_alignParentLeft="true"
        android:src="@drawable/logo"
        android:id="@+id/btnMasterUsuario" />

    <TextView
        android:layout_width="@dimen/titulo_width"
        android:layout_height="@dimen/titulo_height"
        android:layout_marginTop="@dimen/titulo_marginTop"
        android:layout_marginLeft="@dimen/titulo_marginLeft"
        android:text="@string/titulo_usuario"
        android:textSize="@dimen/titulo_textSize"
        android:textColor="@color/colorTexto"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:id="@+id/Titulo" />

    <TextView
        android:text="Usuario"
        android:layout_width="@dimen/acUsuario_txvUser_width"
        android:layout_height="@dimen/acUsuario_txvUser_height"
        android:gravity="center_vertical"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_textSize"
        android:layout_marginTop="@dimen/acUsuario_txvUser_marginTop"
        android:layout_marginLeft="@dimen/acUsuario_txvUser_marginLeft"
        android:id="@+id/txvUser" />

    <TextView
        android:text="Contraseña"
        android:layout_width="@dimen/acUsuario_txvPassword_width"
        android:layout_height="@dimen/acUsuario_txvPassword_height"
        android:gravity="center_vertical"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_textSize"
        android:layout_marginTop="@dimen/acUsuario_txvPassword_marginTop"
        android:layout_marginLeft="@dimen/acUsuario_txvPassword_marginLeft"
        android:id="@+id/txvPassword" />

    <TextView
        android:layout_width="@dimen/acUsuario_edtUsuarioNuevo_width"
        android:layout_height="@dimen/acUsuario_edtUsuarioNuevo_height"
        android:layout_marginLeft="@dimen/acUsuario_edtUsuarioNuevo_marginLeft"
        android:layout_marginTop="@dimen/acUsuario_edtUsuarioNuevo_marginTop"
        android:background="@color/colorGris"
        />

    <TextView
        android:layout_width="@dimen/acUsuario_edtContraseñaNuevo_width"
        android:layout_height="@dimen/acUsuario_edtContraseñaNuevo_height"
        android:layout_marginLeft="@dimen/acUsuario_edtUsuarioNuevo_marginLeft"
        android:layout_marginTop="@dimen/acUsuario_edtContraseñaNuevo_marginTop"
        android:background="@color/colorGris"
        />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="@dimen/acUsuario_edtUsuarioNuevo_width"
        android:layout_height="@dimen/acUsuario_edtUsuarioNuevo_height"
        android:gravity="center_vertical"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:paddingBottom="5dp"
        android:layout_marginTop="@dimen/acUsuario_edtUsuarioNuevo_marginTop"
        android:layout_marginLeft="@dimen/acUsuario_edtUsuarioNuevo_marginLeft"
        android:textColorHint="@color/colorTexto"
        android:textColor="@color/colorTexto"
        android:inputType="textPersonName"
        android:id="@+id/edtUsuarioNuevo" />

    <EditText
        android:imeOptions="actionDone"
        android:layout_width="@dimen/acUsuario_edtContraseñaNuevo_width"
        android:layout_height="@dimen/acUsuario_edtContraseñaNuevo_height"
        android:gravity="center_vertical"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:paddingBottom="5dp"
        android:layout_marginTop="@dimen/acUsuario_edtContraseñaNuevo_marginTop"
        android:layout_marginLeft="@dimen/acUsuario_edtUsuarioNuevo_marginLeft"
        android:textColorHint="@color/colorTexto"
        android:textColor="@color/colorTexto"
        android:inputType="textPassword"
        android:id="@+id/edtContraseñaNuevo" />

    <Button
        android:text="Actualizar"
        android:textAlignment="center"
        android:layout_width="@dimen/acUsuario_btnActualizarUsuario_width"
        android:layout_height="@dimen/acUsuario_btnActualizarUsuario_height"
        android:gravity="center_vertical"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/acUsuario_btnActualizarUsuario_marginTop"
        android:id="@+id/btnActualizarUsuario" />


    <!-- Componentes -->

</RelativeLayout>
