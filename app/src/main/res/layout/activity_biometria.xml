<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_biometria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tempus.proyectos.tempusx.ActivityBiometria">

    <!-- Fondos -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fondo1alt_height"
        android:layout_marginTop="@dimen/fondo1_marginTop"
        android:background="@color/colorFondoBarra"
        android:id="@+id/txvFondo1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fondo2alt_height"
        android:layout_marginTop="@dimen/fondo2alt_marginTop"
        android:background="@color/colorFondoCuerpo"
        android:id="@+id/txvFondo2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fondo3_height"
        android:layout_marginTop="@dimen/fondo3_marginTop"
        android:background="@color/colorFondoBarra"
        android:id="@+id/txvBarraInf" />

    <!-- Lineas -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea_height"
        android:layout_marginTop="@dimen/linea1_marginTop"
        android:background="@color/colorLinea"
        android:id="@+id/txvLinea1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea_height"
        android:background="@color/colorLinea"
        android:layout_alignBottom="@+id/txvFondo1"
        android:id="@+id/txvLinea2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea_height"
        android:layout_marginTop="@dimen/fondo3_marginTop"
        android:background="@color/colorLinea"
        android:id="@+id/txvLinea3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linea_height"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLinea"
        android:id="@+id/txvLinea4" />

    <!-- Titulo -->

    <ImageView
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_marginTop="@dimen/logo_marginTop"
        android:layout_marginLeft="@dimen/logo_marginLeft"
        android:layout_alignParentLeft="true"
        android:src="@drawable/logo"
        android:id="@+id/btnMasterBiometria" />

    <TextView
        android:layout_width="@dimen/titulo_width"
        android:layout_height="@dimen/titulo_height"
        android:layout_marginTop="@dimen/titulo_marginTop"
        android:layout_marginLeft="@dimen/titulo_marginLeft"
        android:text="@string/titulo_biometria"
        android:textSize="@dimen/titulo_textSize"
        android:textColor="@color/colorTexto"
        android:textStyle="bold"
        android:id="@+id/Titulo" />


    <!-- COMPONENTES -->

    <TextView
        android:id="@+id/spnDocuments"
        android:layout_width="@dimen/acBiometria_spnDocuments_width"
        android:layout_height="@dimen/acBiometria_spnDocuments_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/acBiometria_spnDocuments_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_spnDocuments_marginTop"
        android:text="Código ó Nro Doc."
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textColor="@color/colorTexto"/>



    <EditText
        android:layout_width="@dimen/acBiometria_edtHuellaDocumento_width"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/acBiometria_edtHuellaDocumento_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_edtHuellaDocumento_marginTop"
        android:id="@+id/edtHuellaDocumento"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textAlignment="center"
        android:textColor="@color/colorTexto"
        android:hint="00000000"
        android:textColorHint="@color/colorHint"
        android:backgroundTint="@color/colorTexto" />

    <Button
        android:text="Consultar  > "
        android:textStyle="bold"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:layout_width="@dimen/acBiometria_btnConsultarHuella_width"
        android:layout_height="@dimen/acBiometria_btnConsultarHuella_height"
        android:layout_marginLeft="@dimen/acBiometria_btnConsultarHuella_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_btnConsultarHuella_marginTop"
        android:id="@+id/btnConsultarHuella" />

    <TextView
        android:text=""
        android:layout_width="@dimen/acBiometria_txvHuellaNombrePersonal_width"
        android:layout_height="@dimen/acBiometria_txvHuellaNombrePersonal_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/acBiometria_txvHuellaNombrePersonal_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvHuellaNombrePersonal_marginTop"
        android:background="@color/colorGris"
        android:textSize="20sp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/colorTexto"
        android:id="@+id/txvHuellaNombrePersonal" />



    <TextView
        android:background="@color/colorNegro"
        android:layout_width="@dimen/acBiometria_txvHuellaEmpA1_width"
        android:layout_height="@dimen/acBiometria_txvHuellaEmpA1_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/acBiometria_txvHuellaEmpA1_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvHuellaEmpA1_marginTop"
        android:id="@+id/txvHuellaEmpA1" />


    <TextView
        android:background="@color/colorHint"
        android:layout_width="@dimen/acBiometria_txvHuellaEmpA2_width"
        android:layout_height="@dimen/acBiometria_txvHuellaEmpA2_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/acBiometria_txvHuellaEmpA2_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvHuellaEmpA2_marginTop"
        android:id="@+id/txvHuellaEmpA2" />


    <Button
        android:text="Biometria 1"
        android:layout_width="@dimen/acBiometria_btnAcHuella_width"
        android:layout_height="@dimen/acBiometria_btnAcHuella_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_btnAcHuella1_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_btnAcHuella_marginTop"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textStyle="bold"
        android:id="@+id/btnAcHuella1" />

    <Button
        android:text="Biometria 2"
        android:layout_width="@dimen/acBiometria_btnAcHuella_width"
        android:layout_height="@dimen/acBiometria_btnAcHuella_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_btnAcHuella2_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_btnAcHuella_marginTop"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textStyle="bold"
        android:id="@+id/btnAcHuella2" />

    <Button
        android:text="Eliminar"
        android:layout_width="@dimen/acBiometria_btnAcHuella_width"
        android:layout_height="@dimen/acBiometria_btnAcHuella_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_btnAcHuella3_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_btnAcHuella_marginTop"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textStyle="bold"
        android:id="@+id/btnAcHuella3" />


    <TextView
        android:text=" ENROLAMIENTO DISPONIBLE"
        android:layout_width="@dimen/acBiometria_btnAcHuella_width"
        android:layout_height="@dimen/acBiometria_btnAcHuella_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_btnAcHuella1_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvAcHuella_marginTop"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:gravity="center"
        android:id="@+id/txvAcHuella1" />

    <TextView
        android:text=" ENROLAMIENTO DISPONIBLE"
        android:layout_width="@dimen/acBiometria_btnAcHuella_width"
        android:layout_height="@dimen/acBiometria_btnAcHuella_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_btnAcHuella2_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvAcHuella_marginTop"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:gravity="center"
        android:id="@+id/txvAcHuella2" />

    <TextView
        android:text="Empresa"
        android:textColor="@color/colorBlanco"
        android:textSize="@dimen/acBiometria_txvDescCustomer_textSize"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/colorNegro"
        android:layout_width="@dimen/acBiometria_txvHuellaEmpresaCorner_width"
        android:layout_height="@dimen/acBiometria_txvHuellaEmpresaCorner_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/acBiometria_txvHuellaEmpresaCorner_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvHuellaEmpresaCorner_marginTop"
        android:id="@+id/txvHuellaEmpresaCorner" />

    <TextView
        android:text="(*) Recuerde que el ENROLAMIENTO es SECUENCIAL, debe enrolar primero la Biometria 1."
        android:layout_width="@dimen/acBiometria_txvDescCustomer_width"
        android:layout_height="@dimen/acBiometria_txvDescCustomer_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/acBiometria_txvDescCustomer_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvDescCustomer_marginTop"
        android:textSize="@dimen/acBiometria_txvDescCustomer_textSize"
        android:textColor="@color/colorTexto"
        android:gravity="center"
        android:id="@+id/txvDescCustomer" />




    <!---->
    <TextView
        android:layout_width="@dimen/fondo2_width"
        android:layout_height="@dimen/fondo2alt_height"
        android:layout_marginTop="@dimen/fondo2alt_marginTop"
        android:layout_marginLeft="@dimen/fondo2_marginLeft"
        android:background="@color/colorFondoMarcacion"
        android:id="@+id/txvHuellaFondo" />

    <!--
    <pl.droidsonroids.gif.GifTextView
        android:layout_width="@dimen/acBiometria_txvHuellaGif_width"
        android:layout_height="@dimen/acBiometria_txvHuellaGif_height"
        android:background="@drawable/huella"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_txvHuellaGif_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvHuellaGif_marginTop"
        android:id="@+id/txvHuellaGif" />
     -->

    <ImageView
        android:layout_width="@dimen/acBiometria_imgViewResult_width"
        android:layout_height="@dimen/acBiometria_imgViewResult_height"
        android:src="@drawable/sist2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_imgViewResult_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_imgViewResult_marginTop"
        android:id="@+id/imgViewResultOK" />

    <ImageView
        android:layout_width="@dimen/acBiometria_imgViewResult_width"
        android:layout_height="@dimen/acBiometria_imgViewResult_height"
        android:src="@drawable/sist0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_imgViewResult_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_imgViewResult_marginTop"
        android:id="@+id/imgViewResultKO" />



    <TextView
        android:text=""
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textStyle="bold"
        android:layout_width="@dimen/acBiometria_txvHuellaTexto_width"
        android:layout_height="@dimen/acBiometria_txvHuellaTexto_height"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/acBiometria_txvHuellaTexto_marginLeft"
        android:layout_marginTop="@dimen/acBiometria_txvHuellaTexto_marginTop"
        android:id="@+id/txvHuellaTexto" />




    <!---->

    <TextView
        android:text=""
        android:layout_width="@dimen/fondo1_width"
        android:layout_height="@dimen/acBiometria_txvLayerLstHuella_height"
        android:background="#aa000000"
        android:id="@+id/txvLayerLstHuella" />

    <ListView
        android:layout_width="@dimen/acBiometria_lstHuella_width"
        android:layout_height="@dimen/acBiometria_lstHuella_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/acBiometria_lstHuella_marginTop"
        android:background="@color/colorNegro"
        android:id="@+id/lstHuella" />

    <TextView
        android:text="         EMPRESA        CÓDIGO       DOCUMEN     PERSONAL"
        android:layout_width="@dimen/acBiometria_txvCabeceraLstHuella_width"
        android:layout_height="@dimen/acBiometria_txvCabeceraLstHuella_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/acBiometria_txvCabeceraLstHuella_marginTop"
        android:textColor="@color/colorBlanco"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:gravity="center_vertical"
        android:background="@color/colorNegro"
        android:id="@+id/txvCabeceraLstHuella" />

    <Button
        android:text="x"
        android:layout_width="@dimen/acBiometria_btnExitLstHuella_width"
        android:layout_height="@dimen/acBiometria_btnExitLstHuella_height"
        android:layout_alignBottom="@+id/btnConsultarHuella"
        android:layout_alignEnd="@+id/lstHuella"
        android:layout_marginBottom="@dimen/acBiometria_btnExitLstHuella_marginBotton"
        android:id="@+id/btnExitLstHuella" />


</RelativeLayout>
