        android:gravity="center_vertical"
        android:id="@+id/textView17" />

    <TextView
        android:text="Ahorro de Energia:"
        android:layout_width="@dimen/acSistema_lblItemAll_width"
        android:layout_height="@dimen/acSistema_lblItemAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItem5_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:id="@+id/textView18" />

    <TextView
        android:text="Tecnologías:"
        android:layout_width="@dimen/acSistema_lblItemAll_width"
        android:layout_height="@dimen/acSistema_lblItemAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItem6_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:id="@+id/textView19" />

    <EditText
        android:layout_width="@dimen/acSistema_txtItemDesc1_width"
        android:layout_height="@dimen/acSistema_txtItemDesc1_height"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="@dimen/acSistema_lblItemDescAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:background="@color/colorFondoBarra"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/edtSistIdTerminal" />

    <TextView
        android:text="Lorem Ipsum"
        android:layout_width="@dimen/acSistema_lblItemDescAll_width"
        android:layout_height="@dimen/acSistema_lblItemDescAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItemDesc2_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemDescAll_marginLeft"
        android:textColor="@color/colorTexto"
