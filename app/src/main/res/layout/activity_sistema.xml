    <TextView
        android:text="T3"
        android:layout_width="@dimen/acSistema_lblItemDescAll_width"
        android:layout_height="@dimen/acSistema_lblItemDescAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItemDesc8_marginTop"
