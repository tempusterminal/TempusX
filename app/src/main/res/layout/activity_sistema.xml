        android:layout_width="@dimen/acSistema_lblItemDescAll_width"
        android:layout_height="@dimen/acSistema_lblItemDescAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItemDesc3_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemDescAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:gravity="center_vertical"
        android:id="@+id/txvSistSoftware" />

    <TextView
        android:text="Lorem Ipsum"
        android:layout_width="@dimen/acSistema_lblItemDescAll_width"
        android:layout_height="@dimen/acSistema_lblItemDescAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItemDesc4_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemDescAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:gravity="center_vertical"
        android:id="@+id/txvSistIp" />

    <TextView
        android:text="Lorem Ipsum"
        android:layout_width="@dimen/acSistema_lblItemDescAll_width"
        android:layout_height="@dimen/acSistema_lblItemDescAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItemDesc5_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemDescAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:gravity="center_vertical"
        android:id="@+id/txvSistAhorro" />

    <TextView
        android:text="T1"
        android:layout_width="@dimen/acSistema_lblItemDescAll_width"
        android:layout_height="@dimen/acSistema_lblItemDescAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItemDesc6_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemDescAll_marginLeft"
        android:textColor="@color/colorTexto"
