    <TextView
        android:text="Software:"
        android:layout_width="@dimen/acSistema_lblItemAll_width"
        android:layout_height="@dimen/acSistema_lblItemAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItem3_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:id="@+id/textView16" />

    <TextView
        android:text="Dirección IP:"
        android:layout_width="@dimen/acSistema_lblItemAll_width"
        android:layout_height="@dimen/acSistema_lblItemAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItem4_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
