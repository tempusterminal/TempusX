        android:id="@+id/txvSistTec1" />

    <TextView
        android:text="T2"
        android:layout_width="@dimen/acSistema_lblItemDescAll_width"
        android:layout_height="@dimen/acSistema_lblItemDescAll_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/acSistema_lblItemDesc7_marginTop"
        android:layout_marginLeft="@dimen/acSistema_lblItemDescAll_marginLeft"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/cuerpo_min_textSize"
